<script>
function reloadYotpoWidget() {
  const yotpoWidget = document.getElementById('yotpo-widget-2');

  if (yotpoWidget) {
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.addedNodes.length > 0 || mutation.removedNodes.length > 0) {
          // Delay of 3.5 seconds before reloading
          setTimeout(() => {
            yotpoWidget.src = yotpoWidget.src; // Reload by resetting src
          }, 3500);
        }
      });
    });

    // Start observing for added or removed nodes
    observer.observe(yotpoWidget, { childList: true });
  } else {
    console.warn('Yotpo widget with ID "yotpo-widget-2" not found.');
  }
}

// Call the function to start monitoring and reloading
reloadYotpoWidget();

